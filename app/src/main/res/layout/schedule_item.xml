<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="165dp"
    android:background="@android:color/background_light">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/horizontalLine1"
        android:background="@color/gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="1dp" />

    <TextView
        android:text="08:00 - 09:35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:padding="3dp"
        android:maxWidth="45dp"
        android:textAlignment="center"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:id="@+id/verticalLine"
        android:background="@color/gray"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/time"
        android:layout_toEndOf="@+id/time" />

    <TextView
        android:text="Схемотехника"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subj_name"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignTop="@+id/time"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Галчонков О.М."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teacher"
        android:textStyle="normal|italic"
        android:textSize="16sp"
        android:layout_below="@+id/subj_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="Лекция"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subj_type"
        android:background="@android:color/holo_blue_light"
        android:padding="3dp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/verticalLine"
        android:layout_toEndOf="@+id/verticalLine"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:text="525гук"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/room"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/horizontalLine2"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="1dp" />

</RelativeLayout>